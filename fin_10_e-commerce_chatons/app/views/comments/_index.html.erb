<div><% @comments.sort_by(&:created_at).each do |comment| %>
  <div class="card bg-light text-right my-2">
    <div class="card-header ">
      <p ><%= comment.content %></p>
      <footer class="blockquote-footer">
        <strong><%= link_to "#{comment.user.first_name + " " + comment.user.last_name}", user_path(comment.user.id) %></strong>
          <cite title="Source Title">
          <% if user_signed_in? %>
            <% if current_user.id == comment.user_id%>
              <%= link_to "Editer", edit_item_comment_path(@item.id, comment.id), class:"badge badge-success" %>
              <%= link_to "Supprimer", item_comment_path(@item.id, comment.id), class:"badge badge-danger", data:{confirm:"Etes vous sÃ»r de vouloir supprimer ce potin ?", method:"DELETE"} %>
            <% end %>
            
          <% end %>
          </cite>
      </footer>
    </div>
  </div>
<% end %></div>


