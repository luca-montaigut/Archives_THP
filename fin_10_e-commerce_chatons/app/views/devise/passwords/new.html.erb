<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

      <h2 class="h3 mb-3 font-weight-normal text-center">Mot de passe oublier ?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mt-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-success btn-block px-3" %>
        </div>
      <% end %>

      <div class="text-center my-3">
        <%= render "devise/shared/links" %>
      </div>  
    </div>
  </div>
</div>